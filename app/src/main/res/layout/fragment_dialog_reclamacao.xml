<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dark"
    tools:context="mobile.br.com.reclameonibus.fragment.ListaReclamacaoFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Dados da reclamacao1-->
        <include layout="@layout/form_reclamacao"/>
        <!--Dados da reclamacao2-->
        <include layout="@layout/form_reclamacao_2"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/button_enviar_reclamacao"
                android:id="@+id/btEnviarReclamacao"
                style="@style/AppTheme.Button"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
